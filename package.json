{
  "name": "solana-research-assets",
  "version": "1.0.0",
  "description": "Sistema de ativos de pesquisa on-chain na Solana com pNFTs, SBTs e cofre de recompensas",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "mint:metaplex": "tsx scripts/assets/mint-research-asset-metaplex.ts",
    "upload:irys": "tsx scripts/assets/mint-auto-upload.ts",
    "create:collection": "tsx scripts/assets/create-collection-metaplex.ts",
    "badge:create": "tsx scripts/badges/create-badge-mint.ts",
    "badge:issue": "tsx scripts/badges/issue-badge.ts",
    "treasury:init": "tsx scripts/treasury/init-vault.ts",
    "treasury:deposit": "tsx scripts/treasury/deposit-lst.ts",
    "treasury:pay": "tsx scripts/treasury/pay-reviewer.ts"
  },
  "keywords": [
    "solana",
    "nft",
    "sbt",
    "metaplex",
    "research",
    "blockchain"
  ],
  "author": "SurgPass",
  "license": "MIT",
  "dependencies": {
    "@ardrive/turbo-sdk": "^1.33.0",
    "@irys/upload": "^0.0.15",
    "@irys/upload-solana": "^0.1.8",
    "@metaplex-foundation/js": "^0.20.1",
    "@metaplex-foundation/mpl-core": "^0.4.0",
    "@metaplex-foundation/mpl-token-metadata": "^3.4.0",
    "@metaplex-foundation/umi": "^0.8.0",
    "@metaplex-foundation/umi-bundle-defaults": "^0.8.0",
    "@metaplex-foundation/umi-uploader-bundlr": "^0.8.0",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.2",
    "bs58": "^6.0.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "tsx": "^4.15.4",
    "typescript": "^5.5.3"
  }
}
